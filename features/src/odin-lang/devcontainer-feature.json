{
  "id": "odin-lang",
  "version": "1.0.6",
  "name": "Odin Language Support",
  "description": "Adds the Odin language support and tools.",
  "documentationURL": "https://github.com/jjs105/devcontainers/tree/main/features/src/odin-lang",
  "licenseURL": "https://github.com/jjs105/devcontainers/tree/main/LICENSE",
  "keywords": [
    "development container", "devcontainer",
    "Odin", "Odin lang", "programming language", "compiler", "tools"
  ],
  "dependsOn": {
    "ghcr.io/jjs105/features/jjs105-devcontainer:latest": {
      "install_libraries_only": true
    }
  },
  "options": {
    "release":{
      "type": "string",
      "description": "The Odin language release version to install. 'latest' for latest official release, 'master' for GitHub master.",
      "default": "latest",
      "proposals": [
        "master",
        "latest",
        "dev-2025-07",
        "dev-2025-06"
      ]
    },
    "os": {
      "type": "string",
      "description": "The target operating system (when downloading, not compiling.",
      "default": "linux",
      "enum": [
        "linux",
        "macos",
        "windows"
      ]
    },
    "arch": {
      "type": "string",
      "description": "The target architecture (when downloading, not compiling.",
      "default": "amd64",
      "enum": [
        "amd64",
        "arm64"
      ]
    },
    "examples": {
      "type": "boolean",
      "default": true,
      "description": "Whether to install the Odin language example projects."
    },
    "ols-create-config": {
      "type": "boolean",
      "description": "Whether to create ant OLS configuration file.",
      "default": true
    },
    "ols-create-format": {
      "type": "boolean",
      "description": "Whether to create ant OLS format file.",
      "default": true
    }
  },
  "containerEnv": {
    "ODIN_ROOT": "/opt/jjs105/lib/odin-lang"
  },
  "onCreateCommand": "/opt/jjs105/bin/odin-ols-config.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "DanielGavin.ols",
        "vadimcn.vscode-lldb"
      ]
    }
  }
}