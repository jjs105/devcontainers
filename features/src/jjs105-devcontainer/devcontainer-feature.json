{
  "id": "jjs105-devcontainer",
  "version": "1.0.9",
  "name": "jjs105 Development Container Base",
  "description": "Installs tools useful for development of development containers.",
  "documentationURL": "https://github.com/jjs105/devcontainers/tree/main/features/src/jjs105-devcontainer",
  "licenseURL": "https://github.com/jjs105/devcontainers/tree/main/LICENSE",
  "keywords": [
    "development container", "devcontainer",
    "bash", "bash history",
    "fzf", "fuzzy search", "search",
    "prompt", "git prompt"
  ],
  "options": {
    "expected_secrets":{
      "type": "string",
      "description": "Secrets to expect either in ENV variables or /workspace/.jjs105-secrets file. Comma separated list.",
      "default": "ATUIN_USERNAME,ATUIN_PASSWORD,ATUIN_KEY",
      "proposals": [
        "ATUIN_USERNAME,ATUIN_PASSWORD,ATUIN_KEY"
      ]
    },
    "shell_history_method": {
      "type": "string",
      "description": "The method used to control shell history.",
      "default": "atuin_fzf",
      "enum": [
        "none",
        "shared_file",
        "fzf",
        "atuin",
        "atuin_fzf"
      ]
    },
    "bash-history-path": {
      "type": "string",
      "description": "The path to use shared shell history path (shared_file).",
      "default": "/command-history/.bash_history",
      "proposals": [
        "/command-history/.bash_history",
        "/root/.bash_history",
        "~/.bash_history"
      ]
    },
    "git-prompt": {
      "type": "boolean",
      "description": "Install the Git prompt script.",
      "default": true
    }
  },
  "mounts": [
      {
        "source": "projectname-bashhistory",
        "target": "/command-history",
        "type": "volume"
      }
  ]
}