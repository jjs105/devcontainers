{
  "id": "jjs105-devcontainer",
  "version": "1.0.2",
  "name": "jjs105 Development Container Base",
  "description": "Installs tools useful for development of development containers.",
  "documentationURL": "https://github.com/jjs105/devcontainers/tree/main/features/src/jjs105-devcontainer",
  "licenseURL": "https://github.com/jjs105/devcontainers/tree/main/LICENSE",
  "keywords": [
    "development container", "devcontainer",
    "bash", "bash history",
    "fzf", "fuzzy search", "search",
    "prompt", "git prompt"
  ],
  "options": {
    "install-lib": {
      "type": "boolean",
      "description": "Copy install-lib.sh to the container for future use.",
      "default": true
    },
    "test-lib": {
      "type": "boolean",
      "description": "Copy test-lib.sh to the container for future use.",
      "default": false
    },
    "ensure-bash": {
      "type": "boolean",
      "description": "Ensure the Bash shell is installed.",
      "default": true
    },
    "bash-history-path": {
      "type": "string",
      "description": "The path to use for the (common) bash history file.",
      "default": "/command-history/.bash_history",
      "proposals": [
        "/command-history/.bash_history",
        "/root/.bash_history",
        "~/.bash_history"
      ]
    },
    "install-fzf": {
      "type": "boolean",
      "description": "Install the fzf fuzzy search tool(s).",
      "default": true
    },
    "git-prompt": {
      "type": "boolean",
      "description": "Install the Git prompt script.",
      "default": true
    }
  },
  "mounts": [
      {
        "source": "projectname-bashhistory",
        "target": "/command-history",
        "type": "volume"
      }
  ]
}